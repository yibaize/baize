CREATE SCHEMA baize;
USE baize;
DROP TABLE IF EXISTS `user`;
CREATE TABLE user
(
  id INT PRIMARY KEY NOT NULL COMMENT '玩家唯一id',
  playerInfo JSON DEFAULT NULL COMMENT '用户基础信息',
  account VARCHAR(15) COLLATE utf8_bin DEFAULT NULL COMMENT '账号',
  weath JSON DEFAULT NULL COMMENT '玩家财富',
  shop JSON DEFAULT NULL COMMENT '商城信息',
  signIn JSON DEFAULT NULL COMMENT '签到',
  friends JSON DEFAULT NULL COMMENT '好友'
) ENGINE=InnoDB DEFAULT CHARSET=utf8 COLLATE=utf8_bin;

DROP SCHEMA baize;//删除
ALTER TABLE user RENAME TO player;//改名